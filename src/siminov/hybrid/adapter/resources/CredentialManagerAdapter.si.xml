<adapter-descriptor>
    
    <property name="name">CREDENTIAL-MANAGER</property>
    <property name="description">Siminov Connect Credential Manager</property>
    <property name="type">WEB-TO-NATIVE</property>
    <property name="map_to">siminov.hybrid.adapter.handlers.CredentialManagerHandler</property>
	<property name="cache">true</property>
	
    <handlers>
        
        <handler>
            
            <property name="name">IS-ANY-ACTIVE-CREDENTIAL</property>
            <property name="type">SYNC</property>
            <property name="map_to">isAnyActiveCredential</property>
            <property name="description">Flag Indicating Any Active Account Exists Or Not</property>

	         <return>
	             
	             <type>java.lang.String</type>
	             <description>Siminov Data Format</description>
	             
	         </return>
            
        </handler>

        <handler>
            
            <property name="name">GET-ACTIVE-CREDENTIAL</property>
            <property name="type">SYNC</property>
            <property name="map_to">getActiveCredential</property>
            <property name="description">Get Active Credential If Any</property>

	         <return>
	             
	             <type>java.lang.String</type>
	             <description>Siminov Data Format</description>
	             
	         </return>
            
        </handler>

        <handler>
            
            <property name="name">GET-CREDENTIALS</property>
            <property name="type">SYNC</property>
            <property name="map_to">getCredentials</property>
            <property name="description">Get Credentials</property>

	         <return>
	             
	             <type>java.lang.String</type>
	             <description>Siminov Data Format</description>
	             
	         </return>
            
        </handler>

	</handlers>
</adapter-descriptor>