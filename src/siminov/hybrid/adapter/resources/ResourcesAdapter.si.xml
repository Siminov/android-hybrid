<adapter-descriptor>
    
    <property name="name">RESOURCES</property>
    <property name="description">Resources Hybrid Handler</property>
    <property name="type">WEB-TO-NATIVE</property>
    <property name="map_to">siminov.hybrid.adapter.handlers.ResourcesHandler</property>
	<property name="cache">true</property>

	
	<handlers>

	    <!-- ORM BASED HANDLERS -->
	    
        <handler>
            
            <property name="name">GET-APPLICATION-DESCRIPTOR</property>
            <property name="type">SYNC</property>
            <property name="map_to">getApplicationDescriptor</property>
            <property name="description">Get Application Descriptor</property>

			<return>
	        
			    	<property name="type">java.lang.String</property>
	                <property name="description">Application Descriptor</property>
	                
	      	</return>
            
        </handler>

        <handler>
            
            <property name="name">GET-DATABASE-DESCRIPTORS</property>
            <property name="type">SYNC</property>
            <property name="map_to">getDatabaseDescriptors</property>
            <property name="description">Get Database Descriptors</property>

			<return>
	        
			    	<property name="type">java.lang.String</property>
	                <property name="description">Database Descriptors</property>
	                
	      	</return>
            
        </handler>
            
        <handler>
            
            <property name="name">GET-DATABASE-MAPPING-DESCRIPTOR-BASED-ON-CLASS-NAME</property>
            <property name="type">SYNC</property>
            <property name="map_to">getDatabaseMappingDescriptorBasedOnClassName</property>
            <property name="description">Get Database Mapping Descriptor Based On Class Name</property>

            <parameters>
            
                <parameter>
                
                	<property name="type">java.lang.String</property>
                	<property name="description">Database Mapping Descriptor Class Name</property>
                	
            	</parameter>
			
			</parameters>
                            
			<return>
	        
			    	<property name="type">java.lang.String</property>
	                <property name="description">Database Mapping Descriptor</property>
	                
	      	</return>
            
        </handler>
        
        <handler>
            
            <property name="name">GET-DATABASE-MAPPING-DESCRIPTOR-BASED-ON-TABLE-NAME</property>
            <property name="type">SYNC</property>
            <property name="map_to">getDatabaseMappingDescriptorBasedOnTableName</property>
            <property name="description">Get Database Mapping Descriptor Based On Table Name</property>

            <parameters>
            
                <parameter>
                
                	<property name="type">java.lang.String</property>
                	<property name="description">Database Mapping Descriptor Table Name</property>
                	
            	</parameter>
			
			</parameters>
                            
			<return>
	        
			    	<property name="type">java.lang.String</property>
	                <property name="description">Database Mapping Descriptor</property>
	                
	      	</return>
            
        </handler>

        <handler>
            
            <property name="name">GET-DATABASE-MAPPING-DESCRIPTORS</property>
            <property name="type">SYNC</property>
            <property name="map_to">getDatabaseMappingDescriptors</property>
            <property name="description">Get Database Mapping Descriptors</property>

			<return>
	        
			    	<property name="type">java.lang.String</property>
	                <property name="description">Database Mapping Descriptors</property>
	                
	      	</return>
            
        </handler>
        
        
        
        <!-- HYBRID BASED HANDLERS -->
        <handler>
            
            <property name="name">GET-HANDLERS</property>
            <property name="type">SYNC</property>
            <property name="map_to">getHandlers</property>
            <property name="description">Get Handlers</property>

			<return>
	        
			    	<property name="type">java.lang.String</property>
	                <property name="description">Handlers</property>
	                
	      	</return>
            
        </handler>
        

        <handler>
            
            <property name="name">GET-HANDLER</property>
            <property name="type">SYNC</property>
            <property name="map_to">getHandler</property>
            <property name="description">Get Handler</property>

            <parameters>
            
                <parameter>
                
                	<property name="type">java.lang.String</property>
                	<property name="description">Adapter Name</property>
                	
            	</parameter>

                <parameter>
                
                	<property name="type">java.lang.String</property>
                	<property name="description">Handler Name</property>
                	
            	</parameter>
                			
			</parameters>
            
            
			<return>
	        
			    	<property name="type">java.lang.String</property>
	                <property name="description">Handler</property>
	                
	      	</return>
            
        </handler>

	</handlers>
	
</adapter-descriptor>